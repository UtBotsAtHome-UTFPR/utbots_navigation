<launch>
  <!-- Arguments -->
  <arg name="model" default="hestia"/>
  <!--
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>
  -->

  <arg name="map_file" default="~/map.yaml"/><!--Ainda não tem mapa aqui-->

  <!-- Turtlebot3 -->
  <!--<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>-->

  <!-- Necessary tf:
          Base_link laser (acho que só isso) 
  -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="laser_link" args="0.1 0 0.08 0 pi pi base_link laser" />
  <node pkg="tf2_ros" type="static_transform_publisher" name="scan_link" args="0 0 0 0 0 0 laser scan" />
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="odom_link" args="0 0 0 0 0 0 base_link odom" /> -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <!--<include file="$(find turtlebot3_navigation)/launch/amcl.launch"/>-->
  <include file="$(find utbots_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find utbots_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="false">
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find utbots_navigation)/rviz/navigation.rviz"/>
  </group>
</launch>
